<Content type="html"><![CDATA[
<script type="text/javascript" src="http://developmentor.lrlab.to/opensocial-jquery/jquery.js"></script>
<script type="text/javascript">
jQuery(function($) {

  var baseUrl = 'http://developmentor.lrlab.to/opensocial-jquery';
  
  // Global Events
  $('#event1')
    .ajaxStart(function() { console.log('ajaxStart'); })
    .ajaxSend(function() { console.log('ajaxSend'); })
    .ajaxSuccess(function() { console.log('ajaxSuccess'); })
    .ajaxError(function() { console.log('ajaxError'); })
    .ajaxComplete(function() { console.log('ajaxComplete'); })
    .ajaxStop(function() { console.log('ajaxStop'); });

  /**
   * success
   */

  // text/html
  // application/json
  // text/javascript
  var getUrl = baseUrl + '/json.cgi';

  // GET
  $.getJSON(getUrl);
  
  // GET + callback
  $.getJSON(getUrl, function(data, status) {
    console.info(data);
    console.info(status);
  });

  // GET + QUERY_STRING + callback
  $.getJSON(getUrl, { foo: 'bar' }, function(data, status) {
    console.info(data);
    console.info(status);
  });

  /**
   * error
   */

  var parsererrorUrl = baseUrl + '/parsererror.json';

  $.getJSON(parsererrorUrl, function(data, status) {
    console.error(data);
    console.error(status);
  });

  var errorUrl = baseUrl + '/404.html';

  $.getJSON(errorUrl, function(data, status) {
    console.error(data);
    console.error(status);
  });

});
//gadgets.ut
</script>
<div id="event1"></div>
]]></Content>
